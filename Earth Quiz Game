def question_2():
    #bg_image = Label(root, image = q_g_gas)
    #bg_image.place(relheight = 1, relwidth = 1)
    x_list = []
    y_list = []
    g_gas_list = []

    g_gas_list.append(answer_options(root,"Oxygen", wrong_answer))
    g_gas_list.append(answer_options(root, "Nitrogen", wrong_answer))
    g_gas_list.append(answer_options(root, "Carbon Dioxide", right_answer))
    g_gas_list.append(answer_options(root, "Helium", wrong_answer))

    gridpositions = [(x_pos1,y_pos1), (x_pos1,y_pos2),(x_pos2,y_pos1),(x_pos2,y_pos2)]
    random.shuffle(gridpositions)
   
    for i in range (4):
        position = gridpositions[i]
        x_list.append(position[0])
        y_list.append(position[1]) 
    for i in range(4):
        g_gas_list[i].place(x= x_list[i], y= y_list[i] )


